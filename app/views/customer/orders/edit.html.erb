<div class="edit-line-item-properties-wrapper">
  <h3>Edit Line Item Properties</h3>

  <%= form_for @order, as: :post, url: customer_order_path(@order), method: :patch do |f| %>
    <table class="table">
      <tbody>
        <% @order.line_items[0]['properties'].each do |pair| %>
            <tr>
              <td>
                <input value="properties['<%= pair['name'] %>']" type="text" name="properties['<%= pair['name'] %>']" class="form-control">
              </td>
              <td>
                <input value="<%= pair['value'] %>" type="text" name="properties['<%= pair['name'] %>']" class="form-control">
              </td>
            </tr>
        <% end %>


        <% @order.line_items[0].each do |key, value| %>
          <% if key != 'properties' %>
            <tr style="display:none;">
              <td>
                <input value="<%= key %>" type="hidden" name="<%= key %>" class="form-control">
              </td>
              <td>
                <input value="<%= value %>" type="hidden" name="<%= key %>" class="form-control">
              </td>
            </tr>


          <% end %>

        <% end %>

      </tbody>
    </table>
    <%= f.submit 'Update', :class => 'btn btn-info' %>
  <% end %>
</div>

<div class="spacer"></div>
