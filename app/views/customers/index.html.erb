<h3>
  Customers
</h3>
<div class='container-flex customer-view-wrapper'>
  <%= form_tag(customer_search_path, {method: :get, class: 'form-inline', enforce_utf8: false}) do %>
    <div class='form-group customer-search-wrapper'>
      <%= search_field_tag :q, params[:q], class: 'form-control', placeholder: 'Enter customer info' %>
      <%= submit_tag 'Search', { name: nil, class: 'btn btn-info my-2 my-sm-0' } %>
    </div>
  <% end %>
  <table class="table">
    <thead>
      <tr>
        <th>Customer</th>
        <th>Email</th>
        <th>Shopify ID</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @customers.each do |cust| %>
        <tr>
          <td><%= cust.first_name.capitalize %> <%= cust.last_name.capitalize %></td>
          <td><%= cust.email %></td>
          <td><%= cust.shopify_customer_id %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
